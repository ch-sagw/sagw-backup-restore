{
  "compilerOptions": {
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2022"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
    },
    "target": "ES2022",
  },
  "include": [
    ".env/*.js",
    "**/*.ts",
    "**/*.tsx",
    "*.ts",
    "*.mjs",
    "*.js",
    "lint/*.mjs",
  ],
  "exclude": [
    "node_modules",
  ]
}
